@page
@using Entities.Models
@model DiamondAssessment.Pages.Guest.SearchForm.SearchForm

@{
    ViewData["Title"] = "SearchForm Guest";
    Layout = "Shared/_Layout";
}

@section Styles
{
    <link href="~/css/create-form.css" rel="stylesheet" />
}
<h1 class="content-body-header">Lookup Register Form</h1>
<form method="post" asp-page="./SearchForm">
    <div class="form-group d-flex">
        <input asp-for="EmailOrPhone" placeholder="Enter your Email or Phone" class="form-control" required />
        <button type="submit" class="btn btn-primary btn-search">Search</button>
    </div>
    
</form>

@if (Model.RegisterForm != null)
{
    <div class="container mt-5">
    <h1>REGISTER DETAIL: </h1>
    <div class="row border py-3">
        <div class="col-md-6">
            <div class="d-flex justify-content-between">
                <p><strong>Name:</strong> <span>@Model.RegisterForm.Name</span></p>
            </div>
            <div class="d-flex justify-content-between">
                <p><strong>Phone Number:</strong> <span>@Model.RegisterForm.PhoneNumber</span></p>
            </div>
            <div class="d-flex justify-content-between">
                <p><strong>Email:</strong> <span>@Model.RegisterForm.Email</span></p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="border-left pl-3">
                <p><strong>Description:</strong></p>
                <p>@Model.RegisterForm.Description</p>
            </div>
        </div>
    </div>
    <div class="row border mt-2  py-3">
        <h1>Status:</h1>
        @if (Model.RegisterForm.RegisterFormStatus != 0)
        {
            <p class="alert-danger bx-bold">Wait for approving</p>
        }
    </div>
    </div>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}