@page
@using Entities.Models
@using Entities.Models.Enum
@model DiamondAssessment.Pages.Guest.SearchForm.SearchForm

@{
ViewData["Title"] = "SearchForm Guest";
Layout = "Shared/_Layout";
}

@section Styles
{
<link href="~/css/create-form.css" rel="stylesheet" />
}
<h1 class="content-body-header">Lookup Register Form</h1>
<form method="post" asp-page="./SearchForm">
    <div class="form-group d-flex">
        <input asp-for="EmailOrPhone" placeholder="Enter your Phone" class="form-control" required />
        <button type="submit" class="btn btn-primary btn-search">Search</button>
    </div>
</form>

@if (Model.RegisterForm != null)
{
    <div class="container mt-5">
        <h1>Form: </h1>
        <div class="row border py-3">
            <div class="col-md-6">
                <div class="d-flex justify-content-between">
                    <p><strong>Name:</strong> <span>@Model.RegisterForm.Name</span></p>
                </div>
                <div class="d-flex justify-content-between">
                    <p><strong>Phone Number:</strong> <span>@Model.RegisterForm.PhoneNumber</span></p>
                </div>
                <div class="d-flex justify-content-between">
                    <p><strong>Email:</strong> <span>@Model.RegisterForm.Email</span></p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="border-left pl-3">
                    <p><strong>Description:</strong></p>
                    <p>@Model.RegisterForm.Description</p>
                </div>
            </div>
        </div>
    </div>
@if (@Model.Tickets != null)
    {
        <h1 class="mt-3">Your Diamond:</h1>
        @foreach (var ticket in Model.Tickets)
        {
            <div class="row border mb-3">
                <div class="col-md-6">

                    <div class="col-12">
                        <p><strong>Name:</strong> <span>@ticket.TicketName</span></p>
                    </div>
                    @if (ticket.TicketStatus == TicketStatus.Done)
                    {
                        <h2>Status: Completed</h2>
                        <a asp-page="/Staff/AssessmentPaper/Detail" asp-route-ticketId="@ticket.Id">View Assessment Paper</a>
                    }
                    else if (ticket.TicketStatus == TicketStatus.Pending)
                    {
                        <h2>Status: Pending</h2>
                    }
                    else
                    {
                        <h2>Status: In Progress</h2>
                    }
                </div>
            </div>
        }
    }
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <partial name="_ValidationScriptsPartial"/>
}