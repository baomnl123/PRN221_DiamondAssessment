@page
@model DiamondAssessment.Pages.Guest.CreateForm.CreateFormModel

@{
    ViewData["Title"] = "Guest Registration Form";
    Layout = "Shared/_Layout";
}
@section Styles {
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/create-form.css" rel="stylesheet" />
    <style>
        .form-container {
            max-width: 600px;
            margin: auto;
            padding: 30px;
            background: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .form-container h1 {
                margin-bottom: 20px;
                font-size: 2rem;
                color: #333;
            }

        .form-group label {
            font-weight: bold;
        }

        .form-group input {
            border-radius: 5px;
        }

        .btn-submit {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
        }
    </style>
}

<div class="container mt-5">
    <div class="form-container">
        <h1>Leave Your Information</h1>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group">
                <label asp-for="RegisterForm.Name" class="control-label"></label>
                <input asp-for="RegisterForm.Name" class="form-control" />
                <span asp-validation-for="RegisterForm.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterForm.PhoneNumber" class="control-label"></label>
                <input asp-for="RegisterForm.PhoneNumber" class="form-control" />
                <span asp-validation-for="RegisterForm.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterForm.Email" class="control-label"></label>
                <input asp-for="RegisterForm.Email" class="form-control" />
                <span asp-validation-for="RegisterForm.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterForm.Description" class="control-label"></label>
                <input asp-for="RegisterForm.Description" class="form-control" />
                <span asp-validation-for="RegisterForm.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-submit">Submit Form</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}
