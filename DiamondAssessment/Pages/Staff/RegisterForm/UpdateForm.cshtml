@page
@using Entities.Models.Enum
@model DiamondAssessment.Pages.UpdateFormModel
@{
    ViewData["Title"] = "UpdateForm";
}

@if (Model.RegisterForm.RegisterFormStatus == RegisterFormStatus.Approved)
{
    <h1>Edit</h1>
}
else
{
    <h1>Approve</h1>
}

<h4>RegisterForm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RegisterForm.Id" />
            <div class="form-group">
                <label asp-for="RegisterForm.Name" class="control-label"></label>
                <input asp-for="RegisterForm.Name" class="form-control" />
                <span asp-validation-for="RegisterForm.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterForm.Description" class="control-label"></label>
                <input asp-for="RegisterForm.Description" class="form-control" />
                <span asp-validation-for="RegisterForm.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterForm.PhoneNumber" class="control-label"></label>
                <input asp-for="RegisterForm.PhoneNumber" class="form-control" />
                <span asp-validation-for="RegisterForm.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterForm.Email" class="control-label"></label>
                <input asp-for="RegisterForm.Email" class="form-control" />
                <span asp-validation-for="RegisterForm.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (Model.RegisterForm.RegisterFormStatus == RegisterFormStatus.Approved)
                {
                    <input type="submit" value="Save" class="btn btn-primary"/>
                }
                else
                {
                    <input type="submit" value="Approve" class="btn btn-primary"/>
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Staff/RegisterForm/FormPage">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
