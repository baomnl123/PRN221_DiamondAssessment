@page
@using Entities.Models.Enum
@using NuGet.Protocol
@model DiamondAssessment.Pages.CreateFormModel
@{
    ViewData["Title"] = "CreateForm";
    Layout = "Shared/_Layout";
    var role = HttpContext.Session.GetString("Role");
    if (role is not "Staff") Response.Redirect("/Error");
    var accountId = HttpContext.Session.GetString("AccountId");
}
<h1 class="my-4">Create <strong class="text-warning">Register Form</strong></h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Register Form Details</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="form-group">
                        <label asp-for="RegisterForm.Name" class="control-label"></label>
                        <input asp-for="RegisterForm.Name" class="form-control" />
                        <span asp-validation-for="RegisterForm.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RegisterForm.Description" class="control-label"></label>
                        <textarea asp-for="RegisterForm.Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="RegisterForm.Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RegisterForm.PhoneNumber" class="control-label"></label>
                        <input asp-for="RegisterForm.PhoneNumber" class="form-control" />
                        <span asp-validation-for="RegisterForm.PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RegisterForm.Email" class="control-label"></label>
                        <input asp-for="RegisterForm.Email" class="form-control" />
                        <span asp-validation-for="RegisterForm.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-page="/Staff/RegisterForm/FormPage" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
