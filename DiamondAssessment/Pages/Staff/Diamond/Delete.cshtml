@page
@model DiamondAssessment.Pages.Staff.Diamond.Delete
@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

@if (ModelState["DeleteFailed"] == null)
{
    <h3>Are you sure you want to delete this?</h3>
}
else
{
    <h3>@ModelState["DeleteFailed"]!.Errors[0].ErrorMessage</h3>
}

<div>
    <h4>Diamond</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Diamond.Name)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Diamond.Description)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Diamond.Price)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Staff" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>