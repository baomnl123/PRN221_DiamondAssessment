@page
@model DiamondAssessment.Pages.Staff.Diamond.Update
@{
    ViewData["Title"] = "Update Diamond";
    Layout = "Shared/_Layout";
    var role = HttpContext.Session.GetString("Role");
    if (role is not "Staff") Response.Redirect("/Error");
}

<h1 class="my-4">Update <strong class="text-warning">Diamond</strong></h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Diamond Details</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="form-group">
                        <label asp-for="DiamondDetail.Origin" class="control-label"></label>
                        <input asp-for="DiamondDetail.Origin" class="form-control" />
                        <span asp-validation-for="DiamondDetail.Origin" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DiamondDetail.CaratWeight" class="control-label"></label>
                        <textarea asp-for="DiamondDetail.CaratWeight" class="form-control"></textarea>
                        <span asp-validation-for="DiamondDetail.CaratWeight" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DiamondDetail.Clarity"></label>
                        <select asp-for="DiamondDetail.Clarity" class="form-control"
                            asp-items="Model.QualityOptions"></select>
                        <span asp-validation-for="DiamondDetail.Clarity" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DiamondDetail.Cut"></label>
                        <select asp-for="DiamondDetail.Cut" class="form-control"
                            asp-items="Model.QualityOptions"></select>
                        <span asp-validation-for="DiamondDetail.Cut" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DiamondDetail.Proportions"></label>
                        <select asp-for="DiamondDetail.Proportions" class="form-control"
                            asp-items="Model.QualityOptions"></select>
                        <span asp-validation-for="DiamondDetail.Proportions" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DiamondDetail.Color"></label>
                        <select asp-for="DiamondDetail.Color" class="form-control"
                            asp-items="Model.GlowStrengthOptions"></select>
                        <span asp-validation-for="DiamondDetail.Color" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DiamondDetail.Polish"></label>
                        <select asp-for="DiamondDetail.Polish" class="form-control"
                            asp-items="Model.QualityOptions"></select>
                        <span asp-validation-for="DiamondDetail.Polish" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DiamondDetail.Symmetry"></label>
                        <select asp-for="DiamondDetail.Symmetry" class="form-control"
                            asp-items="Model.QualityOptions"></select>
                        <span asp-validation-for="DiamondDetail.Symmetry" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DiamondDetail.Fluorescence"></label>
                        <select asp-for="DiamondDetail.Fluorescence" class="form-control"
                            asp-items="Model.GlowStrengthOptions"></select>
                        <span asp-validation-for="DiamondDetail.Fluorescence" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-page="/Staff/Diamond/Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}