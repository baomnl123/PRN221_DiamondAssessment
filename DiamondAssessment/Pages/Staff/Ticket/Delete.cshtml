@page
@model DiamondAssessment.Pages.Staff.Ticket.Delete

@{
    Layout = "Shared/_Layout";
    var role = HttpContext.Session.GetString("Role");
    if (role is not "Staff") Response.Redirect("/Error");
}

<h1>Delete</h1>

@if (ModelState["DeleteFailed"] == null)
{
    <h3>Are you sure you want to delete this?</h3>
}
else
{
    <h3>@ModelState["DeleteFailed"]!.Errors[0].ErrorMessage</h3>
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Ticket Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.TicketName)
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.Name)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.Email)
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ticket.PhoneNumber)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Ticket" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>