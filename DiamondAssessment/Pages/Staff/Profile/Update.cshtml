@page
@model DiamondAssessment.Pages.Staff.Profile.UpdateModel
@{
    ViewData["Title"] = "Update Profile";
    Layout = "Shared/_Layout";
}

<div class="container mt-5">
    <h1 class="text-center">Update Profile</h1>
    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title">Edit Profile</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Staff.Id" />

                <div class="form-group mb-3">
                    <label asp-for="Staff.Name" class="control-label"></label>
                    <input asp-for="Staff.Name" class="form-control" />
                    <span asp-validation-for="Staff.Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Staff.PhoneNumber" class="control-label"></label>
                    <input asp-for="Staff.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Staff.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Staff.Email" class="control-label"></label>
                    <input asp-for="Staff.Email" class="form-control" />
                    <span asp-validation-for="Staff.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                    <a asp-page="/Staff/Profile/Profile" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
