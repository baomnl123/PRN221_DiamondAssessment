@page "{diamondId:guid}/{ticketId:guid}"
@model DiamondAssessment.Pages.Staff.AssessmentPaper.Create

@{
Layout = "Shared/_Layout";
var role = HttpContext.Session.GetString("Role");
if (role is not "Staff") Response.Redirect("/Error");
}

<div class="container mt-4">
    <h1>Create Assessment Paper</h1>
    <form method="post">
        <div class="form-group">
            <label asp-for="Paper.PaperCode" class="control-label"></label>
            <input asp-for="Paper.PaperCode" class="form-control" />
            <span asp-validation-for="Paper.PaperCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="origin">Origin</label>
            <input type="text" id="origin" name="Origin" class="form-control" value="@Model.DiamondDetail.Origin" readonly/>
        </div>
        <div class="form-group">
            <label for="caratWeight">Carat Weight</label>
            <input type="text" id="caratWeight" name="CaratWeight" class="form-control" value="@Model.DiamondDetail.CaratWeight" readonly/>
        </div>
        <div class="form-group">
            <label for="clarity">Clarity</label>
            <input type="text" id="clarity" name="Clarity" class="form-control" value="@Model.DiamondDetail.Clarity" readonly/>
        </div>
        <div class="form-group">
            <label for="cut">Cut</label>
            <input type="text" id="cut" name="Cut" class="form-control" value="@Model.DiamondDetail.Cut" readonly/>
        </div>
        <div class="form-group">
            <label for="proportions">Proportions</label>
            <input type="text" id="proportions" name="Proportions" class="form-control" value="@Model.DiamondDetail.Proportions" readonly/>
        </div>
        <div class="form-group">
            <label for="color">Color</label>
            <input type="text" id="color" name="Color" class="form-control" value="@Model.DiamondDetail.Color" readonly/>
        </div>
        <div class="form-group">
            <label for="polish">Polish</label>
            <input type="text" id="polish" name="Polish" class="form-control" value="@Model.DiamondDetail.Polish" readonly/>
        </div>
        <div class="form-group">
            <label for="symmetry">Symmetry</label>
            <input type="text" id="symmetry" name="Symmetry" class="form-control" value="@Model.DiamondDetail.Symmetry" readonly/>
        </div>
        <div class="form-group">
            <label for="fluorescence">Fluorescence</label>
            <input type="text" id="fluorescence" name="Fluorescence" class="form-control" value="@Model.DiamondDetail.Fluorescence" readonly/>
        </div>
        <button type="submit" class="btn btn-primary">Create Assessment Paper</button>
    </form>
</div>
