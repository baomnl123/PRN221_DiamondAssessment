@page "{ticketId:guid}"
@model DiamondAssessment.Pages.Staff.AssessmentPaper.Detail

@{
Layout = "Shared/_Layout";
}

@section Styles
{
<link href="~/css/detail-AP.css" rel="stylesheet" />
<!-- Ensure Bootstrap is included -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
}

<div class="ap-container">
    <a class="btn btn-primary mb-3" asp-page="/Manager/CommitmentForm/Create" asp-route-paperId="@Model.Paper.Id.ToString()">
        <i class="bi bi-plus-lg"></i> Create CommitmentForm
    </a>
    <div class="row">
        <div class="page col-md-5">
            <!-- Company Name and Icon -->
            <div style="font-size: xx-large" class="mb-4 d-flex">
                <i class="fas fa-gem fa-2x"></i>
                <h1>PPBQ</h1>
            </div>
            <div class="text-center fw-bold" style="font-size: x-large">
                Phiếu xác nhận kiểm định
            </div>
            <div class="flex-column align-content-center">
                <div class="m-1">
                    <strong>Cơ sở kiểm định: </strong>
                    <text>Trung tâm kiểm định kim cương PPBQ</text>
                </div>
                <div class="m-1">
                    <strong>Mã số phiếu: </strong>
                    <text>@Html.DisplayFor(model => model.Paper.PaperCode)</text>
                </div>
                <div class="m-1">
                    <strong>Nhân viên kiểm định chất lượng: </strong>
                    <text>@Html.DisplayFor(model => model.Paper.Staff.Name)</text>
                </div>
                <div class="m-1">
                    <strong>Khách hàng: </strong>
                    <text>@Html.DisplayFor(model => model.Paper.Ticket.Name)</text>
                </div>
            </div>
            <div class="flex-row justify-content-around mt-4 border-2 border-black">
                <div class="flex-column text-center align-items-center border-2 border-black">
                    <strong>Người nhận</strong>
                    <div class="h-25 w-25"></div>
                </div>
                <div class="flex-column text-center align-items-center border-2 border-black">
                    <strong>Người kiểm định</strong>
                    <div class="h-25 w-25"></div>
                </div>
            </div>
        </div>

        <!-- Vertical line separator -->
        <div class="col-md-1 d-flex justify-content-center align-items-center">
            <div class="vertical-line"></div>
        </div>

        <div class="page col-md-5">
            <!-- Paper Code at the Head -->
            <div class="text-center mb-4">
                <h2 style="font-size: xx-large; color: #664d03">Mã số phiếu</h2>
                <h2> @Html.DisplayFor(model => model.Paper.PaperCode)</h2>
            </div>
            <div class="text-center fw-bold" style="font-size: x-large">Chi tiết kiểm định</div>
            <div class="flex-column m-1 justify-content-around">
                <div class="row">
                    <div class="col-6 text-left">
                        <strong>Origin: </strong>
                        </div>
                    <div class="col-6 text-right">
                        <text>@Html.DisplayFor(model => model.Paper.Origin)</text>
                    </div>
                    </div>
                <div class="row">
                    <div class="col-6 text-left">
                        <strong>Carat Weight: </strong>
                    </div>
                    <div class="col-6 text-right">
                        <text>@Html.DisplayFor(model => model.Paper.CaratWeight)</text>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 text-left">
                        <strong>Clarity: </strong>
                    </div>
                    <div class="col-6 text-right">
                        <text>@Html.DisplayFor(model => model.Paper.Clarity)</text>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 text-left">
                        <strong>Cut: </strong>
                    </div>
                    <div class="col-6 text-right">
                        <text>@Html.DisplayFor(model => model.Paper.Cut)</text>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 text-left">
                        <strong>Proportions: </strong>
                    </div>
                    <div class="col-6 text-right">
                        <text>@Html.DisplayFor(model => model.Paper.Proportions)</text>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 text-left">
                        <strong>Color: </strong>
                    </div>
                    <div class="col-6 text-right">
                        <text>@Html.DisplayFor(model => model.Paper.Color)</text>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 text-left">
                        <strong>Polish: </strong>
                    </div>
                    <div class="col-6 text-right">
                        <text>@Html.DisplayFor(model => model.Paper.Polish)</text>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 text-left">
                        <strong>Symmetry: </strong>
                    </div>
                    <div class="col-6 text-right">
                        <text>@Html.DisplayFor(model => model.Paper.Symmetry)</text>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6 text-left">
                        <strong>Fluorescence: </strong>
                    </div>
                    <div class="col-6 text-right">
                        <text>@Html.DisplayFor(model => model.Paper.Fluorescence)</text>
                    </div>
                </div>
            </div>
        </div>
            
        </div>
    </div>
<form method="post">
    <button class="btn btn-primary btn-lg">Print to PDF</button>
</form>
@if (Model.SealingReportId == null)
{
    <a class="btn btn-primary mb-3" asp-page="/Manager/SealingReport/Create" asp-route-paperId="@Model.Paper.Id.ToString()">
        <i class="bi bi-plus-lg"></i> Create Sealing Report
    </a>
}
else
{
    <a class="btn btn-secondary my-3" asp-page="/Manager/SealingReport/Detail" asp-route-sealingReportId="@Model.SealingReportId.ToString()">
        <i class="bi bi-eye"></i> View Sealing Report
    </a>
}