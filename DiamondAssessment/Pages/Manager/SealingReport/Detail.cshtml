@page "{id:guid}"
@model DiamondAssessment.Pages.Manager.SealingReport.Detail

@{
ViewData["Title"] = "Sealing Report";
Layout = "Shared/_Layout";
}

@section Styles
{
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet"/>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet"/>
<style>
    .sealing-report-container {
        border: 2px solid #333;
        padding: 20px;
        margin-top: 20px;
        font-family: 'Arial', sans-serif;
    }
    .header-section {
        text-align: center;
        margin-bottom: 30px;
    }
    .header-section h1 {
        margin: 0;
        font-size: 2.5rem;
        color: #333;
    }
    .header-section h2 {
        margin: 0;
        font-size: 1.5rem;
        color: #666;
    }
    .details-section {
        margin-bottom: 20px;
    }
    .details-section strong {
        font-size: 1.2rem;
    }
    .details-section .value {
        font-size: 1.2rem;
        color: #555;
    }
    .signature-section {
        margin-top: 40px;
        margin-bottom: 40px;
    }
    .content-left{
        display: flex;
    }
</style>
}

<div class="sealing-report-container">
    <div class="header-section">
        <h1>Sealing Report</h1>
        <h2>Diamond Assessment</h2>
        <h3>Report ID: @Model.SealingReport.Id</h3>
    </div>

    <div class="details-section">
        <div class="row">
            <div class="col-6">
                <strong>Paper Code:</strong>
            </div>
            <div class="col-6 value">
                @Model.Paper.PaperCode
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <strong>Created At:</strong>
            </div>
            <div class="col-6 value">
                @Model.SealingReport.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")
            </div>
        </div>
    </div>

    <div class="diamond-details-section">
        <h4> Sealing Diamond: </h4>
        <div class="row">
            <div class="col-6 content-left">
                <strong class="ms-5">Origin:</strong>
            </div>
            <div class="col-6 value">
                @Model.Paper.Origin
            </div>
        </div>
        <div class="row">
            <div class="col-6 content-left">
                <strong class="ms-5">Carat Weight:</strong>
            </div>
            <div class="col-6 value">
                @Model.Paper.CaratWeight
            </div>
        </div>
        <div class="row">
            <div class="col-6 content-left">
                <strong class="ms-5">Clarity:</strong>
            </div>
            <div class="col-6 value">
                @Model.Paper.Clarity
            </div>
        </div>
        <div class="row">
            <div class="col-6 content-left">
                <strong class="ms-5">Cut:</strong>
            </div>
            <div class="col-6 value">
                @Model.Paper.Cut
            </div>
        </div>
        <div class="row">
            <div class="col-6 content-left">
                <strong class="ms-5">Proportions:</strong>
            </div>
            <div class="col-6 value">
                @Model.Paper.Proportions
            </div>
        </div>
        <div class="row">
            <div class="col-6  content-left">
                <strong class="ms-5">Color:</strong>
            </div>
            <div class="col-6 value">
                @Model.Paper.Color
            </div>
        </div>
        <div class="row">
            <div class="col-6  content-left">
                <strong class="ms-5">Polish:</strong>
            </div>
            <div class="col-6 value">
                @Model.Paper.Polish
            </div>
        </div>
        <div class="row">
            <div class="col-6  content-left">
                <strong class="ms-5">Symmetry:</strong>
            </div>
            <div class="col-6 value">
                @Model.Paper.Symmetry
            </div>
        </div>
        <div class="row">
            <div class="col-6 content-left">
                <strong class="ms-5">Fluorescence:</strong>
            </div>
            <div class="col-6 value">
                @Model.Paper.Fluorescence
            </div>
        </div>
    </div>

    <div class="signature-section row">
        <div class="col-6 text-center">
            <strong>Assessor Signature</strong>
        </div>
        <div class="col-6 text-center">
            <strong>Customer Signature</strong>
        </div>
    </div>
</div>

<div>
    <a class="mt-5" asp-page="/Manager/SealingReport/Index">Back to List</a>
</div>
