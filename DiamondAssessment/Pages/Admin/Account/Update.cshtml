@page
@model DiamondAssessment.Pages.Admin.Account.Update

@{
    Layout = "Shared/_Layout";
    var role = HttpContext.Session.GetString("Role");
    if (role is not "1") Response.Redirect("/Error");
}

<h1>Edit <strong class="text-warning">Account</strong></h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Staff.Id" />
            <div class="form-group">
                <label asp-for="Staff.Name" class="control-label">Name</label>
                <input asp-for="Staff.Name" class="form-control" />
                <span asp-validation-for="Staff.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Email" class="control-label">Email</label>
                <input asp-for="Staff.Email" class="form-control" />
                <span asp-validation-for="Staff.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="Staff.PhoneNumber" class="form-control" />
                <span asp-validation-for="Staff.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Password" class="control-label">Password</label>
                <input asp-for="Staff.Password" class="form-control" />
                <span asp-validation-for="Staff.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Role" class="control-label"></label>
                <select asp-for="Staff.Role" class="form-control">
                    <option value="1">Admin</option>
                    <option value="2">Manager</option>
                    <option value="3">Staff</option>
                </select>
                <span asp-validation-for="Staff.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>