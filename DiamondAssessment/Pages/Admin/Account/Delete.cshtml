@page
@model DiamondAssessment.Pages.Admin.Account.Delete

@{
    Layout = null;
}

<h1>Delete</h1>

@if (ModelState["DeleteFailed"] == null)
{
    <h3>Are you sure you want to delete this?</h3>
}
else
{
    <h3>@ModelState["DeleteFailed"]!.Errors[0].ErrorMessage</h3>
}

<div>
    <h4>NewsArticle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.Name)
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.Email)
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.PhoneNumber)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Staff" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>